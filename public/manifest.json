{
  "manifest_version": 3,
  "name": "GitHub Tab Indent Extension",
  "version": "0.1.0",
  "description": "Proper tab indentation for GitHub text editors",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}